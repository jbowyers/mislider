	"grunt-contrib-jscs": "~0.1.8",
    "grunt-contrib-jshint": "~0.8.0",
    "grunt-contrib-uglify": "~0.5.0",
    "grunt-contrib-watch": "~0.5.3",
    "grunt-htmlhint": "~0.4.0",
    "grunt-includes": "~0.4.4",
