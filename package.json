{
  "name": "mislider",
  "title": "miSlider",
  "version": "0.1.7",
  "description": "Multi-item Slider or miSlider is an open-source jQuery slider plugin specifically designed for displaying multiple images or slides of content. The slider can be configured to display one slide at a time, as as possible or anything in between.",
  "main": "dist/mislider.js",
  "author": "John Bowyer-Smyth",
  "scripts": {
    "build": "npm install && grunt",
    "start": "grunt watch",
    "test": "grunt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbowyers/mislider.git"
  },
  "keywords": [
    "slider",
    "jQuery",
    "plugin",
    "carousel",
    "image",
    "gallery",
    "multiple",
    "images"
  ],
  
  "licenses": [
    {
      "type": "GPL-3.0+",
      "url": "https://github.com/jbowyers/mislider/blob/master/licence.txt",
	  "files": "LICENCE.txt"
    }
  ],
  "bugs": {
    "url": "https://github.com/jbowyers/mislider/issues"
  },
  "directories": {
      "demo": "./demo",
      "dist": {
		"root": "./dist",
		"js":"./dist/js",
		"css": "./dist/css"
      },
      "doc": "./doc",
      "lib": "./lib",
	  "templates": "./templates",
      "src": {
		"root": "./src",
		"js":"./src/js",
		"css": "./src/css"
      },
      "test": "./test",
      "deploy": {
            "root": "./../",
            "css": "./../css",
            "js": "./../js"
        }
